<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_card_view"
    style="@style/Widget.MaterialSheetFab.Note"
    card_view:cardCornerRadius="6dp"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#e3f2fd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/author"
            style="@style/TextAppearance.MaterialSheetFab.Note.Title"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/time_date"
            style="@style/TextAppearance.MaterialSheetFab.Note"
            android:layout_width="match_parent"
            android:gravity="right|bottom" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />
        <TextView
            android:id="@+id/chat_text"
            style="@style/TextAppearance.MaterialSheetFab.Note.Title"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/name_city_room"
            style="@style/TextAppearance.MaterialSheetFab.Note"
            android:layout_width="match_parent"
            android:gravity="right|bottom" />

    </LinearLayout>


</android.support.v7.widget.CardView>